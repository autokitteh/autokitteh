-- full.yaml --
version: v1

project:
  name: my_project
  connections:
    - name: my_connection
      integration: test
  triggers:
    - name: test
      connection: my_connection
      call: my_program.star:on_test
    - name: get
      type: webhook
      event_type: get
      call: my_program.star:on_http_get

