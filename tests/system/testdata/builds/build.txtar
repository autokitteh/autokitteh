# Precondition: create project.
ak project create --name my_project -j
return code == 0
capture_jq pid .project_id

# Build project from a single file.
ak project build my_project --file meow.star -j
return code == 0
capture_jq bid .build_id

ak build describe $bid -j | jq 'del(.build.info.memo)' > actual.json
return code == 0
jq 'del(.build.info.memo)' build.json > expected.json
diff actual.json expected.json
return code == 0

